<div class="container mt-4">
  <h1 class="text-center mb-3 bg-info">{{title}}</h1>
  <form action="/index" method="POST" class="mb-4">
    <div class="form-group">
      <label for="username">Name</label>
      <input type="text" autocomplete="off" name="username" required class="form-control">
    </div>
    <div class="form-group">
      <label for="passwd">Password</label>
      <input type="password" autocomplete="off" name="passwd" required class="form-control">
    </div>
    <input type="submit" value="Login" class="btn btn-outline-dark btn-block">
  </form>
</div>