<div class="container mt-4 text-center">
    <h1 class="text-center mb-3 bg-success">File explorer</h1>
</div>
<br> 
<div class="container mt-4 text-center">
    <h2 class="text-center mb-3 bg-info">{{dir_name}}</h2>
</div>
<br> 

<div class="container mt-4 text-center">
    <form action="/files_exp/upload" method="POST" enctype="multipart/form-data">
        <div class="input-group mb-3 text_center">
            <input type="file" class="form-control" id="file_upload" required>
            <button type="submit" class="btn btn-light btn-outline-secondary">Upload file</button>
            {{!-- <label class="input-group-text" for="file_upload">Upload file</label> --}}
        </div>
    </form>
    
</div>
<br> 

<div class="container mt-4 text-center">
    <table class="table">
        <thead>
            <tr> 
                <th scope="col" class="table-info">Files </th>
                <th scope="col" class="table-info"></th>
                <th scope="col" class="table-info">Dimensione </th>
                <th scope="col" class="table-info">Tipo</th>
                <th scope="col" class="table-info">Ultima modifica</th>
            </tr>
        </thead>
        <tbody>
        {{# each file_name}}
            <tr>
                <td scope="row">
                    <a class="btn btn-link {{this.link_status}}" href="/files_exp/Downloads/{{this.name}}" role="button">{{this.name}}</a>
                </td>
                <td scope="row">
                    <a class="btn btn-danger {{this.link_status}}" href="/files_exp/Downloads/cancel/{{this.name}}" role="button">Cancella</a>
                </td>
                <td scope="row">
                    {{this.dim}}
                </td>
                <td scope="row">
                    {{this.type}}
                </td>
                <td scope="row">
                    {{this.last_mod}}
                </td>
            </tr>
        {{/each}}
        </tbody>    
    </table>
</div>




<div class="container mt-4 p-3 mb-2 bg-info text-dark">
    <script src="/actualTime.js" ></script>
    <h6 style="text-align: center;" id="orario"> </h6>
</div>