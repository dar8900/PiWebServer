<h1 class="text-center mb-3 bg-success">{{title}}</h1>
<div class="container-fluid">
    <div class="row bg-info text-center border border-info font-weight-bold">
        <div class="col">
            Stato PiServer
        </div>
    </div>
    <script src="/index.js"></script>
    <div class="row">
        <div class="col text-center border border-dark font-weight-bold">
            {{up_time}}
        </div>
        <div class="col text-center border border-dark" id="pi_uptime">
        </div>
    </div>
    <div class="row">
        <div class="col text-center border border-dark font-weight-bold">
            {{temperatura}}
        </div>
        <div class="col text-center border border-dark" id="pi_temp">
        </div>
    </div>
    <div class="row">
        <div class="col text-center border border-dark font-weight-bold">
            {{utilizzo_cpu}}
        </div>
        <div class="col text-center border border-dark" id="pi_cpu">
            
        </div>
    </div>
    <div class="row">
        <div class="col text-center border border-dark font-weight-bold">
            {{utilizzo_ram}}
        </div>
        <div class="col text-center border border-dark" id="pi_ram">
            
        </div>
    </div>

    <div class="row">
        <div class="col text-center border border-dark font-weight-bold" id="user_name">
            
        </div>
        <div class="col text-center border border-dark" id="user_time">
            
        </div>
    </div>
    <div class="row">
        <div class="col text-center border border-dark font-weight-bold">
            {{ssh_n_conn}}
        </div>
        <div class="col text-center border border-dark" id="pi_ssh_n_conn">
            
        </div>
    </div>
</div>
